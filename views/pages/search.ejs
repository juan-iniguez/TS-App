                    <li class="nav-item">
                        <a class="details-tab nav-link" id="rates-tab" >Rates</a>
                    </li>
                </ul>
                <div class="input-group mb-3">
                    <!-- <label for="search-arg">Search</label> -->
                    <select class="search-arg" id="search-arg", name="search-arg">
                        <option value="BOL" >BOL</option>
                        <option value="MEMBER_NAME">Member Name</option>
                        <option value="DATE_CREATED">Date Created</option>
                        <option value="SCAC">SCAC</option>
                        <option value="GBL">GBL</option>
                        <option value="TTL_CF">TTL_CF</option>
                    </select>
                    <input type="text" class="form-control" id="search-bar">
                </div>
            </div>
            <table style="width:100%" id="table-main">
                <!-- INCLUDE RESULTS -->
            </table>
        </div>

        <footer>
          <%- include('../partials/footer'); %>
        </footer>
    </div>
</body>
<script src="/js/search.js"></script>
</html>