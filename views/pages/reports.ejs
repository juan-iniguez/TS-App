<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
    <%- include('../partials/reload'); %>
    <link rel="stylesheet" href="/css/reports.css">  
    <title>Reports</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <!-- Modal -->
    <div class="modal fade" id="report-modal" tabindex="-1" aria-labelledby="report modal" aria-hidden="true">
        <div class="modal-dialog">
            <div id="report-info" class="modal-content">
                <div class="modal-header show">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Create a Report</h1>
                    <button id="btn-close" type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body show">
                    <div class="report-select">
                        <a id="report1" style="grid-area: report1;" class="report-option shadowbox">
                            <h1 class="report-option-title">Main Report</h1>
                            <p class="emoji">üèÜ</p>
                        </a>
                        <a id="report2" style="grid-area: report2;" class="report-option shadowbox">
                            <h1 class="report-option-title">Discount Report</h1>
                            <p class="emoji">üìó</p>
                        </a>
                        <a id="report3" style="grid-area: report3;" class="report-option shadowbox">
                            <h1 class="report-option-title">Accruals Report</h1>
                            <p class="emoji">üìò</p>
                        </a>
                    </div>
                </div>
                <div class="modal-footer show">
                    <p style="width: 100%;text-align: center;">Choose a Report Type</p>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <header>
            <%- include('../partials/header'); %>
        </header>



        <main>
            <h1 style="margin-top: 1em;">Reports</h1>
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-light btn-report-create shadowbox" data-bs-toggle="modal" data-bs-target="#report-modal">
            Create Report üõ†Ô∏è
            </button>
            <div id="charts-container" class="charts card_">
                <div class="charts-container">
                    <div style="width: 100%;height: 100%;">
                        <canvas class="chart" id="chart-1"></canvas>
                    </div>
                    <div>
                        <canvas class="chart" id="chart-2"></canvas>
                    </div>
                    <div class="charts-info-container shadowbox">
                        <p class="background-info">MONTHLY</p>
                        <h1 class="info-titles">Total APL OCF: <p class="info-amount"></p> </h1>
                        <h1 class="info-titles">Total TSP Discount: <p class="info-amount"></p> </h1>
                        <h1 class="info-titles">Total Company Discount: <p class="info-amount"></p> </h1>
                    </div>
                </div>
            </div>
            <div hidden class="reports-card">
                <a href="/api/reports/mainreport">Main Report</a>
                <a href="#">Discount Report</a>
                <a href="/api/reports/accruals">ATW Accruals Report</a>
            </div>
        </main>
        <footer style="display: flex; justify-content: center;align-items: center;padding: 2em;">
            <%- include('../partials/footer'); %>
        </footer>
    </div>
    </body>
    <script src="/js/reports.js"></script>
</html>